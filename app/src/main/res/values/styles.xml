<resources>

    <!-- Base application theme. -->
    <style name="BBAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/BudgetBeaverActionBar</item>
        <item name="android:popupMenuStyle">@style/BudgetBeaverPopupMenu</item>
        <item name="android:textViewStyle">@style/BudgetBeaverTextView</item>
        <item name="android:editTextStyle">@style/BudgetBeaverTextView</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="BudgetBeaverActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="BBAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BBAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BBAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BudgetBeaverTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="BudgetBeaverTextBox" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorLightGray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorAccentDark</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="BudgetBeaverCheckbox" parent="Base.Theme.AppCompat">
        <item name="colorControlNormal">@color/colorLightGray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="BudgetBeaverPopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>
